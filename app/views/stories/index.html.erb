<h2>Awesome stories</h2>

<div id="tool_bar"></div>

<%= link_to "Create new story", new_story_path, id: :new_story %>

<ul class="story-list">
  <% @stories.each do |story| %>
    <li class="story-title"><%= link_to story.title, story_path(story) %></li><br />
    <li class="story-description"><%= story.description %></li><br />
    <li class="story-image_url"><%= story.image_url %></li><br />
    <%= image_tag(story.image_url) %>

    <%= link_to "EDIT THIS SHIT", edit_story_path(story.id) %>

    <%= link_to "DELETE THIS SHIT", story_path(story.id), method: :delete %>
  <% end %>
</ul>

<div id="pop-up">
  <%= render "form" %>
</div>



