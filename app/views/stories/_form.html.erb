<%= form_for @story, :html => {:class => 'hidden'} do |f| %>
  Title:
  <br>
  <%=f.text_field :title %>
  <br>
  <br>

  Description:
  <br>
  <%= f.text_area :description %>
  <br>
  <br>

  Image URL:
  <br>
  <%=f.text_field :image_url %>
  <br>
  <br>
  <%=f.submit "Submit your story" %>
<% end %>